# Variables
## Standard mark names
set $mark1 1
set $mark2 2
set $mark3 3
set $mark4 4
set $mark5 5

## Mode names (variables are not allowed to start with 'mode'!)
set $default_mode default
set $resize_mode resize
set $move_mode move
set $mark_mode mark
set $music_mode music

## Workspace names
set $workspace1 
set $workspace2 
set $workspace3 
set $workspace4 
set $workspace5 5
set $workspace6 6
set $workspace7 7
set $workspace8 8
set $workspace9 9

## Step sizes (mind high resolution display)
### Window resizing
set $resize_step_small 5
set $resize_step_big 15

### Window movement
set $move_step_small 3
set $move_step_big 50

## Cursor movement
set $cursor_step_small 10
set $cursor_step_big 200
set $scroll_height 5

# ---


# Basics
## Define the mod key. Here: Super/Win
set $mod Mod4

## Focus
focus_follows_mouse yes
focus_on_window_activation smart

## Define the font to use for the windows.
font xft:SauceCodePro Nerd Font:size=6

show_marks yes

# Lockscreen activation command
bindsym $mod+Control+l exec --no-startup-id xautolock -locknow

# Open Shutdown/Suspend/... Menu
bindsym $mod+t exec --no-startup-id ~/.scripts/i3_runstate.zsh

# ---


# Windows
## Kill focused window.
bindsym $mod+q kill

## Move between windows.
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

## Select window by easy-focus.
bindsym $mod+space exec --no-startup-id ~/.scripts/i3-easyfocus --all

## Move focused window.
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

## Change windows split. (default horizontal)
bindsym $mod+Control+h split h
bindsym $mod+Control+v split v

## Toogle fullscreen for active window.
bindsym $mod+Shift+f fullscreen toggle

## Change window layout.
# bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

## Floating Windows
### Toogle floating for active window.
bindsym $mod+Shift+space floating toggle

### Switch between tiled and floated windows.
bindsym $mod+Mod1+space focus mode_toggle

### Toggle current floating window sticky ability.
bindsym $mod+Control+space sticky toggle

## Resize focused window.
bindsym $mod+r mode $resize_mode

mode $resize_mode {
  # Grow and shrink the width and height.
  bindsym h resize grow width $resize_step_small px or $resize_step_small ppt
  bindsym l resize shrink width $resize_step_small px or $resize_step_small ppt
  bindsym j resize shrink height $resize_step_small px or $resize_step_small ppt
  bindsym k resize grow height $resize_step_small px or $resize_step_small ppt

  # The same but with larger steps.
  bindsym Shift+h resize grow width $resize_step_big px or $resize_step_big ppt
  bindsym Shift+l resize shrink width $resize_step_big px or $resize_step_big ppt
  bindsym Shift+j resize shrink height $resize_step_big px or $resize_step_big ppt
  bindsym Shift+k resize grow height $resize_step_big px or $resize_step_big ppt

  # Leave mode.
  bindsym Return mode $default_mode
}

# Move floated windows
bindsym $mod+m mode $move_mode; focus floating

mode $move_mode {
  # Switch to next window.
  bindsym space focus right

  # Move window in all directions.
  bindsym h move left $move_step_small px
  bindsym j move down $move_step_small px
  bindsym k move up $move_step_small px
  bindsym l move right $move_step_small px

  bindsym Shift+h move left $move_step_big px
  bindsym Shift+j move down $move_step_big px
  bindsym Shift+k move up $move_step_big px
  bindsym Shift+l move right $move_step_big px

  # Leave mode.
  bindsym Return mode $default_mode
}

## ---
# ---


# Container
## Focus parent or child container.
bindsym $mod+a focus parent
bindsym $mod+d focus child

## Move focused container to workspace.
bindsym $mod+Shift+1 move container to workspace $workspace1
bindsym $mod+Shift+2 move container to workspace $workspace2
bindsym $mod+Shift+3 move container to workspace $workspace3
bindsym $mod+Shift+4 move container to workspace $workspace4
bindsym $mod+Shift+5 move container to workspace $workspace5
bindsym $mod+Shift+6 move container to workspace $workspace6
bindsym $mod+Shift+7 move container to workspace $workspace7
bindsym $mod+Shift+8 move container to workspace $workspace8
bindsym $mod+Shift+9 move container to workspace $workspace9

## Move focused container between outputs.
bindsym $mod+Mod1+j move container to output left
bindsym $mod+Mod1+k move container to output right

## Swap container
bindsym $mod+Control+s exec i3-input -F 'swap container with mark %s' -P 'Mark Name: '

# ---


# Workspaces
## Switch workspace.
bindsym $mod+1 workspace $workspace1
bindsym $mod+2 workspace $workspace2
bindsym $mod+3 workspace $workspace3
bindsym $mod+4 workspace $workspace4
bindsym $mod+5 workspace $workspace5
bindsym $mod+6 workspace $workspace6
bindsym $mod+7 workspace $workspace7
bindsym $mod+8 workspace $workspace8
bindsym $mod+9 workspace $workspace9

## Move focused workspace between outputs.
bindsym $mod+Control+j move workspace to output left
bindsym $mod+Control+k move workspace to output right

# ---


# Scratchpad
## Move active window to the scratchpad and toggle its visibility.
bindsym $mod+Shift+s move scratchpad
bindsym $mod+s scratchpad show
# bindsym $mod+s exec gnome-terminal --geometry 270x25
# for_window [instance="scratchpad"] move to scratchpad

# ---


# Launching
## Launch a terminal emulator and start Zsh inside.
bindsym $mod+Return exec i3-sensible-terminal


# i3 Control
## Reload configuration.
bindsym $mod+Shift+c reload

## Restart in place (do not logout).
bindsym $mod+Shift+r restart

## Exit (with logout)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# ---


# Cursor Control
## Move
bindsym $mod+Left exec --no-startup-id xdotool mousemove_relative -- -$cursor_step_small 0
bindsym $mod+Shift+Left exec --no-startup-id xdotool mousemove_relative -- -$cursor_step_big 0

bindsym $mod+Up exec --no-startup-id xdotool mousemove_relative -- 0 -$cursor_step_small
bindsym $mod+Shift+Up exec --no-startup-id xdotool mousemove_relative -- 0 -$cursor_step_big

bindsym $mod+Right exec --no-startup-id xdotool mousemove_relative -- $cursor_step_small 0
bindsym $mod+Shift+Right exec --no-startup-id xdotool mousemove_relative -- $cursor_step_big 0

bindsym $mod+Down exec --no-startup-id xdotool mousemove_relative -- 0 $cursor_step_small
bindsym $mod+Shift+Down exec --no-startup-id xdotool mousemove_relative -- 0 $cursor_step_big

## Scroll
bindsym $mod+Mod1+Up exec --no-startup-id xdotool click --repeat $scroll_height 4
bindsym $mod+Mod1+Down exec --no-startup-id xdotool click --repeat $scroll_height 5

## Prevent locking
bindsym $mod+Mod1+l exec --no-startup-id xdotool mousemove 0 0


# Device Control
## Screen Brightness
bindsym XF86MonBrightnessUp exec --no-startup-id sudo ~/.scripts/brightness.sh up
bindsym XF86MonBrightnessDown exec --no-startup-id sudo ~/.scripts/brightness.sh down

## Volume
### Command to control the volume
set $cmd_vol_mute exec --no-startup-id pactl set-sink-mute $(pacmd list-sinks | grep '* index' | awk -F ':' '{print $2}' | tr -d '[:space:]') toggle
set $cmd_vol_lower exec --no-startup-id pactl set-sink-volume $(pacmd list-sinks | grep '* index' | awk -F ':' '{print $2}' | tr -d '[:space:]') -5%
set $cmd_vol_raise exec --no-startup-id pactl set-sink-volume $(pacmd list-sinks | grep '* index' | awk -F ':' '{print $2}' | tr -d '[:space:]') +5%

### Bind commands to latop volume keys.
bindsym XF86AudioMute $cmd_vol_mute
bindsym XF86AudioLowerVolume $cmd_vol_lower
bindsym XF86AudioRaiseVolume $cmd_vol_raise

### Bind commands to functions keys for normal keyboard.
bindsym $mod+F1 $cmd_vol_mute
bindsym $mod+F2 $cmd_vol_lower
bindsym $mod+F3 $cmd_vol_raise

#---


# i3 Gaps Configuration
## Gap between windows.
gaps inner 10
gaps outer 5
smart_gaps on

## The window title height.
new_window pixel 2

## Colors
### class       border      backgr.     text    indicator   child_border
client.focused  #5fd7ff     #5fd7ff     #5fd7ff #5fd7ff     #5fd7ff

# ---


# Marks & Find
bindsym $mod+grave mode $mark_mode

mode $mark_mode {
  # Hard-coded focus binding.
  bindsym f [class="(?i)firefox"] focus; mode $default_mode

  # Mark and jump to windows.
  bindsym m exec i3-input -F 'mark %s' -P 'Mark name: '; mode $default_mode
  bindsym g exec i3-input -F '[con_mark=%s] focus' -P 'Go to mark: '; mode $default_mode

  # Quick mark assign by numbers.
  bindsym Shift+1 mark $mark1; mode $default_mode
  bindsym Shift+2 mark $mark2; mode $default_mode
  bindsym Shift+3 mark $mark3; mode $default_mode
  bindsym Shift+4 mark $mark4; mode $default_mode
  bindsym Shift+5 mark $mark5; mode $default_mode

  # Quick mark jump to numbers.
  bindsym 1 [con_mark=$mark1] focus; mode $default_mode
  bindsym 2 [con_mark=$mark2] focus; mode $default_mode
  bindsym 3 [con_mark=$mark3] focus; mode $default_mode
  bindsym 4 [con_mark=$mark4] focus; mode $default_mode
  bindsym 5 [con_mark=$mark5] focus; mode $default_mode

  # Exit to the default mode (only necessary if do nothing)
  bindsym Return mode $default_mode
}

## Interactiv go to by mark
bindsym $mod+g exec ~/.scripts/i3_goto.zsh

## Interactive go to by title
bindsym $mod+f exec ~/.scripts/i3_find.zsh

# ---


# Music Control
bindsym $mod+Shift+m mode $music_mode

mode $music_mode {
  set $music_control_command bash ~/.scripts/music_control.sh

  # Execute and exit mode immediately.
  bindsym p exec --no-startup-id dex /usr/share/applications/ncmpcpp.desktop; mode $default_mode
  bindsym space exec --no-startup-id $music_control_command toggle_play; mode $default_mode
  bindsym r exec --no-startup-id $music_control_command toggle_random; mode $default_mode
  bindsym s exec --no-startup-id $music_control_command stop; mode $default_mode

  # Execute possibly multiple times before exit mode.
  bindsym n exec --no-startup-id $music_control_command next
  bindsym p exec --no-startup-id $music_control_command previous

  # Exit to the default mode.
  bindsym Return mode $default_mode
}


# Window Preferences
for_window [class="Yad"] floating enable
for_window [class="kitty" instance="orgatimer"] floating enable
for_window [class="kitty" instance="floating"] floating enable

# ---


# MISC
## Screenshot
bindsym $mod+Print exec --no-startup-id ~/.scripts/screenshot.sh

## Disable internal display, if two more are connected externally.
exec --no-startup-id [[ $(xrandr | grep ' connected' | wc -l) -gt 2 ]] && xrandr --output eDP-1 --off

