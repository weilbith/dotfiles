# Variables
## The path to the wallpaper for the background and lockscreen.
set $wallpaper ~/Bilder/Wallpapers/Wallpaper.png

## Standard mark names
set $mark1 1
set $mark2 2
set $mark3 3
set $mark4 4
set $mark5 5

## Mode names (variables are not allowed to start with 'mode'!)
set $default_mode default
set $resize_mode resize
set $focused_mode focused

# ---


# Basics
## Define the mod key. Here: Super/Win
set $mod Mod4

## Enable window focus by mouse (to do not annoy others).
focus_follows_mouse yes

## Define the font to use for the windows.
font pango:monospace 8

# Status Bar
bar {
  i3bar_command ~/.i3-lemonbar/config/i3_lemonbar.sh
}

# Keyboard Layout
setxkbmap -layout us,de

# Set Wallpaper
exec --no-startup-id feh --bg-scale $wallpaper

# Define Lockscreen  (png required)
bindsym $mod+Control+l exec --no-startup-id i3lock -i $wallpaper -d -n && sleep 1 mode $default_mode

# Open Shutdown/Suspend/... Menu
bindsym $mod+t exec --no-startup-id ~/.scripts/i3_dmenu_runstate

# ---


# Windows
## Kill focused window.
bindsym $mod+q kill

## Move between windows.
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

## Move focused window.
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

## Change windows split. (default horizontal)
bindsym $mod+Control+h split h
bindsym $mod+Control+v split v

## Toogle fullscreen for active window.
bindsym $mod+Shift+f fullscreen toggle

## Change window layout.
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

## Floating Windows
### Toogle floating for active window.
bindsym $mod+Shift+space floating toggle

### Switch between tiled and floated windows.
bindsym $mod+space focus mode_toggle

## Resize focused window.
bindsym $mod+r mode $resize_mode

mode $resize_mode {
  # Grow and shrink the width and height.
  bindsym h resize grow width 10 px or 10 ppt
  bindsym l resize shrink width 10 px or 10 ppt
  bindsym j resize shrink height 10 px or 10 ppt
  bindsym k resize grow height 10 px or 10 ppt

  # Leave mode.
  bindsym Return mode $default_mode
}

## ---
# ---


# Container
## Focus parent or cild container.
bindsym $mod+a focus parent
bindsym $mod+d focus child

## Move focused container to workspace.
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# ---


# Workspaces
## Switch workspace.
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# ---


# Launching
## Launch a terminal emulator.
bindsym $mod+Return exec i3-sensible-terminal


# i3 Control
## Reload configuration.
bindsym $mod+Shift+c reload

## Restart in place (do not logout).
bindsym $mod+Shift+r restart

## Exit (with logout)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# ---


# Device Control
## Screen Brightness
bindsym XF86MonBrightnessUp exec --no-startup-id sudo ~/.scripts/brightness.sh up
bindsym XF86MonBrightnessDown exec --no-startup-id sudo ~/.scripts/brightness.sh down

## Volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%

#---


# Autostart
## Start Cloud Synchronization Clients
exec --no-startup-id /usr/bin/nextcloud
exec --no-startup-id /usr/bin/dropbox start

## Start Cerebro (smart launcher)
exec --no-startup-id cd ~/Tools/cerebro/release && ./cerebro-0.3.2-x86_64.AppImage

## Start Compton (make transparency possible)
exec --no-startup-id compton

# ---


# i3 Gaps Configuration
## Gap between windows.
gap_size 7

## The window title height.
new_window 1pixel

## Colors
### class       border      backgr.     text    indicator   child_border<Paste>
client.focused  #5fd7ff     #5fd7ff     #5fd7ff #5fd7ff     #5fd7ff

# ---


# Mark & Jump
bindsym $mod+f mode $focused_mode

mode $focused_mode {
  # Hardcoded focus keybindinig.
  bindsym f [class="(?i)firefox"] focus; mode $default_mode

  # keybindings for marking and jumping to clients
  bindsym m exec i3-input -F 'mark %s' -P 'Mark name: '; mode $default_mode
  bindsym g exec i3-input -F '[con_mark=%s] focus' -P 'Go to mark: '; mode $default_mode

  # Quick mark assign by numbers.
  bindsym Shift+1 mark $mark1; mode $default_mode
  bindsym Shift+2 mark $mark2; mode $default_mode
  bindsym Shift+3 mark $mark3; mode $default_mode
  bindsym Shift+4 mark $mark4; mode $default_mode
  bindsym Shift+5 mark $mark5; mode $default_mode

  # Quick mark jump to numbers.
  bindsym 1 [con_mark=$mark1] focus; mode $default_mode
  bindsym 2 [con_mark=$mark2] focus; mode $default_mode
  bindsym 3 [con_mark=$mark3] focus; mode $default_mode
  bindsym 4 [con_mark=$mark4] focus; mode $default_mode
  bindsym 5 [con_mark=$mark5] focus; mode $default_mode

  # Exit to the default mode (only necessary if do nothing)
  bindsym Return mode $default_mode
}

## Interactiv GoTo
bindsym $mod+g exec ~/.scripts/i3_goto 

# ---


# MISC
## Screenshot
bindsym $mod+Print exec --no-startup-id ~/.scripts/screenshot.sh

