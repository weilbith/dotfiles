[commit]
  gpgsign = true
  verbose = true

[core]
  pager = less -F -X
  excludesfile = ~/.config/git/gitignore

[alias]
  s = status
  ss = status .
  rv = remote -v
  ch = checkout HEAD
  cb = checkout -b
  cm = checkout master
  bv = branch -vv
  recent = "!r(){ git for-each-ref --sort=-committerdate refs/heads --color=always --format='%(HEAD)%(color:yellow)%(refname:short)|%(color:bold green)%(committerdate:relative)|%(color:blue)%(subject)|%(color:magenta)%(authorname)%(color:reset)'|column -ts'|';}; r"
  graph = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all

[merge]
  tool = fugitive

[mergetool]
  keepBackup = false

[mergetool "fugitive"]
  cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"

[rebase]
  autosquash = true

[filter "black"]
  clean = black -
  smudge = black -l 120 -

