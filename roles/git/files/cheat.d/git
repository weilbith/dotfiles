# Rename current branch
git branch --move <NEW_NAME>

# Remove file from stage area
git reset <FILE>

# Show log of single file
git log --patch <FILE>

# Check if file is under version control
git ls-files --error-unmatch <FILE>

# Show file from other branch
git show <BRANCH>:<FILE>

# Checkout file from other branch
git checkout <BRANCH> -- <FILE>

# Reference history
git reflog

# List files of a commit
git diff-tree --no-commit-id --name-only -r <COMMIT>

# Ignore file locally only
echo '<FILE>' >> .git/info/exclude
