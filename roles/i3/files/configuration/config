# Variables
## Mode names (variables are not allowed to start with 'mode'!)
set $default_mode default
set $resize_mode resize
set $move_mode move
set $set_mark_mode set_mark
set $goto_mark_mode goto_mark

## Workspace names
set $workspace1 1
set $workspace2 2
set $workspace3 3
set $workspace4 4
set $workspace5 5
set $workspace6 6
set $workspace7 7
set $workspace8 8
set $workspace9 9

## Monitor outputs
set $internal_laptop eDP-1
set $external_hdmi HDMI-1
set $docking_display_port DP-3

## Step sizes (mind high resolution display)
### Window resizing
set $resize_step_small 5
set $resize_step_big 15

### Window movement
set $move_step_small 3
set $move_step_big 50

# ---


# Basics
## Use better names for the modifier keys
set $super Mod4
set $alt Mod1

## Focus
focus_follows_mouse yes
focus_on_window_activation smart

## Define the font to use for the windows.
font xft:SauceCodePro Nerd Font:size=6

show_marks yes


# ---


# Windows
## Kill focused window.
bindsym $super+q kill

## Move between windows.
bindsym $super+h focus left
bindsym $super+j focus down
bindsym $super+k focus up
bindsym $super+l focus right

## Select window by easy-focus.
bindsym $super+space exec --no-startup-id i3-easyfocus --all --color-unfocused-bg=FFFFFF

## Move focused window.
bindsym $super+Shift+h move left
bindsym $super+Shift+j move down
bindsym $super+Shift+k move up
bindsym $super+Shift+l move right

## Change windows split. (default horizontal)
bindsym $super+Control+h split h
bindsym $super+Control+v split v

## Toogle fullscreen for active window.
bindsym $super+Shift+f fullscreen toggle

## Change window layout.
# bindsym $super+s layout stacking
bindsym $super+w layout tabbed
bindsym $super+e layout toggle split

## Floating Windows
### Toogle floating for active window.
bindsym $super+Shift+space floating toggle

### Switch between tiled and floated windows.
bindsym $super+$alt+space focus mode_toggle

### Toggle current floating window sticky ability.
bindsym $super+Control+space sticky toggle

## Resize focused window.
bindsym $super+r mode $resize_mode

mode $resize_mode {
  # Grow and shrink the width and height.
  bindsym h resize grow width $resize_step_small px or $resize_step_small ppt
  bindsym l resize shrink width $resize_step_small px or $resize_step_small ppt
  bindsym j resize shrink height $resize_step_small px or $resize_step_small ppt
  bindsym k resize grow height $resize_step_small px or $resize_step_small ppt

  # The same but with larger steps.
  bindsym Shift+h resize grow width $resize_step_big px or $resize_step_big ppt
  bindsym Shift+l resize shrink width $resize_step_big px or $resize_step_big ppt
  bindsym Shift+j resize shrink height $resize_step_big px or $resize_step_big ppt
  bindsym Shift+k resize grow height $resize_step_big px or $resize_step_big ppt

  # Leave mode.
  bindsym Return mode $default_mode
}

# Move floated windows
bindsym $super+Shift+m mode $move_mode; focus floating

mode $move_mode {
  # Switch to next window.
  bindsym space focus right

  # Move window in all directions.
  bindsym h move left $move_step_small px
  bindsym j move down $move_step_small px
  bindsym k move up $move_step_small px
  bindsym l move right $move_step_small px

  bindsym Shift+h move left $move_step_big px
  bindsym Shift+j move down $move_step_big px
  bindsym Shift+k move up $move_step_big px
  bindsym Shift+l move right $move_step_big px

  # Leave mode.
  bindsym Return mode $default_mode
}

## ---
# ---


# Container
## Focus parent or child container.
bindsym $super+a focus parent
bindsym $super+d focus child

## Move focused container to workspace.
bindsym $super+Shift+1 move container to workspace $workspace1
bindsym $super+Shift+2 move container to workspace $workspace2
bindsym $super+Shift+3 move container to workspace $workspace3
bindsym $super+Shift+4 move container to workspace $workspace4
bindsym $super+Shift+5 move container to workspace $workspace5
bindsym $super+Shift+6 move container to workspace $workspace6
bindsym $super+Shift+7 move container to workspace $workspace7
bindsym $super+Shift+8 move container to workspace $workspace8
bindsym $super+Shift+9 move container to workspace $workspace9

## Swap container
bindsym $super+Control+s exec i3-input -F 'swap container with mark %s' -P 'Mark Name: '

# ---


# Workspaces
## Switch workspace.
bindsym $super+1 workspace $workspace1
bindsym $super+2 workspace $workspace2
bindsym $super+3 workspace $workspace3
bindsym $super+4 workspace $workspace4
bindsym $super+5 workspace $workspace5
bindsym $super+6 workspace $workspace6
bindsym $super+7 workspace $workspace7
bindsym $super+8 workspace $workspace8
bindsym $super+9 workspace $workspace9

## Move focused workspace between outputs.
bindsym $super+$alt+h move workspace to output left
bindsym $super+$alt+j move workspace to output down
bindsym $super+$alt+k move workspace to output up
bindsym $super+$alt+l move workspace to output right

# ---


# Marks & Find
bindsym $super+m mode $set_mark_mode

mode $set_mark_mode {
  bindsym m exec i3-input -F 'mark %s' -P 'Mark name: '; mode $default_mode

  bindsym 1 mark 1; mode $default_mode
  bindsym 2 mark 2; mode $default_mode
  bindsym 3 mark 3; mode $default_mode
  bindsym 4 mark 4; mode $default_mode
  bindsym 5 mark 5; mode $default_mode

  bindsym Escape mode $default_mode
}

bindsym $super+grave mode $goto_mark_mode

mode $goto_mark_mode {
  bindsym f [class="(?i)firefox"] focus; mode $default_mode

  bindsym g exec i3-input -F '[con_mark=%s] focus' -P 'Go to mark: '; mode $default_mode

  bindsym 1 [con_mark=1] focus; mode $default_mode
  bindsym 2 [con_mark=2] focus; mode $default_mode
  bindsym 3 [con_mark=3] focus; mode $default_mode
  bindsym 4 [con_mark=4] focus; mode $default_mode
  bindsym 5 [con_mark=5] focus; mode $default_mode

  bindsym Escape mode $default_mode
}

## Interactiv go to by mark
bindsym $super+g exec i3-goto-mark

## Interactive go to by title

bindsym $super+f exec rofi -show window

# Scratchpad
bindsym $super+Shift+s move scratchpad
bindsym $super+s scratchpad show


# i3 Control
## Reload configuration.
bindsym $super+Shift+c reload

## Restart in place (do not logout).
bindsym $super+Shift+r restart

## Exit (with logout)
bindsym $super+Shift+e exec "i3-nagbar -t warning -m 'Do you really want to exit i3?' -b 'Yes' 'i3-msg exit'"

# ---


# i3 Gaps Configuration
## Gap between windows.
gaps inner 8
gaps outer 3

## The window title height.
new_window pixel 2

## Colors
### class       border      backgr.     text        indicator   child_border
client.focused  #f1f1f2     #f1f1f2     #f1f1f2     #f1f1f2     #f1f1f2

# ---

# Window Preferences
for_window [class="Yad"] floating enable
for_window [instance="floating"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [class="Ferdi" instance="ferdi"] move scratchpad, scratchpad show
for_window [class="zoom"] move container to workspace $workspace4
for_window [class="Gscreenshot"] floating enable

# ---


# Workspace Preferences
workspace $workspace1 output $internal_laptop $external_hdmi
workspace $workspace2 output $internal_laptop $docking_display_port
workspace $workspace3 output $internal_laptop $external_hdmi
workspace $workspace4 output $internal_laptop $docking_display_port


